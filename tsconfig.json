{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "client-frontend",
    "dist",
    "docs",
    "temp",
    "test"],
  "compileOnSave": false
}
